    <Page.BottomAppBar>
        <CommandBar Foreground="White" 
                    HorizontalAlignment="Stretch">
            <CommandBar.Background>
                <SolidColorBrush Color="#FF08709E"/>
            </CommandBar.Background>
            <AppBarButton x:ConnectionId='2' x:Uid="SelectItmesBtn" x:Name="SelectItmesBtn" 
                          Foreground="White" 
                          FontFamily="Segoe Print" 
                                                      >
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                              Glyph="&#xe762;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:ConnectionId='3' x:Uid="DeleteItemsBtn" x:Name="DeleteItemsBtn" 
                          Foreground="White" 
                          FontFamily="Segoe Print" 
                          Icon="Delete" 
                                                       />
            <AppBarButton x:ConnectionId='4' x:Uid="CancelSelectionBtn" x:Name="CancelSelectionBtn"
                          FontFamily="Segoe Print" 
                          Foreground="White" 
                          Icon="Cancel" 
                                                           />
        </CommandBar>
    </Page.BottomAppBar>


    <Page.Resources>

        <converter:NameFromRessourceConverter x:ConnectionId='5' x:Name="NameFromRessourceFormatConverter"/>

        <!-- When using x:Bind, you need to set x:DataType -->
        <DataTemplate x:ConnectionId='6' x:Name="BalanceListViewTemplateWithUnderCategory" 
                                                   >
            <Grid x:ConnectionId='11'>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='12' Foreground="White"
                           Grid.RowSpan="2"
                           Width="90"
                                                
                           TextAlignment="Right"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                         />
                <TextBlock x:ConnectionId='13' Foreground="White" 
                           Grid.Column="1"
                                                
                                         FontFamily="Segoe Print"
                           Style="{ThemeResource BaseTextBlockStyle}"
                           Margin="12,6,0,0"/>
                <TextBlock x:Name="txtTemplateUnderCategory" Foreground="White"
                           Grid.Column="1" FontFamily="Segoe Print"
                            Grid.Row="1"
                            Text="{Binding UnderCategory, Mode=OneWay, 
                            Converter={StaticResource NameFromRessourceFormatConverter}}" 
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Margin="12,0,0,6"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:ConnectionId='7' x:Name="BalanceListViewTemplateWithoutUnderCategory" 
                                                   >
            <Grid x:ConnectionId='8'>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='9' Foreground="White"
                           Width="90"
                                                
                           TextAlignment="Right"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                         />
                <TextBlock x:ConnectionId='10' Foreground="White" 
                           Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                                                
                                        FontFamily="Segoe Print"
                           Style="{ThemeResource BaseTextBlockStyle}"
                           Margin="12,0,0,0"/>
            </Grid>
