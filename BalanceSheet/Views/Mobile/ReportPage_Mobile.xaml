    <Page
    x:Class="BalanceSheet.Views.Mobile.ReportPage_Mobile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BalanceSheet.Views.Mobile"
    xmlns:controls="using:BalanceSheet.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:BalanceSheet.Models"
    xmlns:converter="using:BalanceSheet.ValueConverters"
    mc:Ignorable="d"  FontFamily="Segoe Print" Margin="0,-23,0,0">

    <Page.BottomAppBar>
        <CommandBar Foreground="White" 
                    HorizontalAlignment="Stretch">
            <CommandBar.Background>
                <SolidColorBrush Color="#FF08709E"/>
            </CommandBar.Background>
            <AppBarButton x:Uid="SelectItmesBtn" x:Name="SelectItmesBtn" 
                          Foreground="White" 
                          FontFamily="Segoe Print" 
                          Click="SelectItmesBtn_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                              Glyph="&#xe762;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Uid="DeleteItemsBtn" x:Name="DeleteItemsBtn" 
                          Foreground="White" 
                          FontFamily="Segoe Print" 
                          Icon="Delete" 
                          Click="DeleteItemsBtn_Click" />
            <AppBarButton x:Uid="CancelSelectionBtn" x:Name="CancelSelectionBtn"
                          FontFamily="Segoe Print" 
                          Foreground="White" 
                          Icon="Cancel" 
                          Click="CancelSelectionBtn_Click" />
        </CommandBar>
    </Page.BottomAppBar>


    <Page.Resources>

        <converter:NameFromRessourceConverter x:Name="NameFromRessourceFormatConverter"/>

        <!-- When using x:Bind, you need to set x:DataType -->
        <DataTemplate x:Name="BalanceListViewTemplateWithUnderCategory" 
                      x:DataType="data:ListBalance">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Foreground="White"
                           Grid.RowSpan="2"
                           Width="90"
                           Text="{x:Bind Preis}"
                           TextAlignment="Right"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                         />
                <TextBlock Foreground="White" 
                           Grid.Column="1"
                           Text="{x:Bind Name}" 
                           x:Phase="1"   FontFamily="Segoe Print"
                           Style="{ThemeResource BaseTextBlockStyle}"
                           Margin="12,6,0,0"/>
                <TextBlock x:Name="txtTemplateUnderCategory" Foreground="White"
                           Grid.Column="1" FontFamily="Segoe Print"
                            Grid.Row="1"
                            Text="{Binding UnderCategory, Mode=OneWay, 
                            Converter={StaticResource NameFromRessourceFormatConverter}}" 
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Margin="12,0,0,6"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="BalanceListViewTemplateWithoutUnderCategory" 
                      x:DataType="data:ListBalance">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Foreground="White"
                           Width="90"
                           Text="{x:Bind Preis}"
                           TextAlignment="Right"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                         />
                <TextBlock Foreground="White" 
                           Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                           Text="{x:Bind Name}" 
                           x:Phase="1"  FontFamily="Segoe Print"
                           Style="{ThemeResource BaseTextBlockStyle}"
                           Margin="12,0,0,0"/>
            </Grid>
        </DataTemplate>


